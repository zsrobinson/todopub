---
import { cn } from "~/lib/utils";
import "../styles/global.css";
const { className, title } = Astro.props;

interface Props {
  className?: string;
  title?: string;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title || "TodoPub"}</title>
  </head>

  <body class={cn("mx-auto max-w-5xl p-8", className)}>
    <a href="/"
      ><h1 class="text-2xl font-bold">TodoPub: Todoist Public Projects</h1></a
    >
    <slot />
  </body>
</html>

<style></style>
